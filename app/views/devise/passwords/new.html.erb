<main class="pa4 black-80">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= recaptcha_tags %>

  <fieldset id="forgot_password" class="ba b--transparent ph0 mh0">
    <legend class="f4 fw6 ph0 mh0">Forgot your password?</legend>
    <div class="mt3">
      <%= f.label :email, class: "db fw6 lh-copy f6" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "b pa2 input-reset ba bg-transparent hover-bg-orange hover-white w-100" %>
    </div>
  </fieldset>

  <div class="">
    <%= f.submit "Send me reset password instructions", class: "b pa2 input-reset ba bg-transparent hover-bg-orange hover-white w-100" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</main>
