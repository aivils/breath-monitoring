<main class="pa4 black-80">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <fieldset id="sign_up" class="ba b--transparent ph0 mh0">
      <legend class="f4 fw6 ph0 mh0">Edit <%= resource_name.to_s.humanize %></legend>
      <div class="mt3">
        <%= f.label :email, class: "db fw6 lh-copy f6" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "b pa2 input-reset ba bg-transparent hover-bg-orange hover-white w-100" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mt3">
        <%= f.label :password, class: "db fw6 lh-copy f6" %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "b pa2 input-reset ba bg-transparent hover-bg-orange hover-white w-100" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="mt3">
        <%= f.label :password_confirmation, class: "db fw6 lh-copy f6" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "b pa2 input-reset ba bg-transparent hover-bg-orange hover-white w-100" %>
      </div>

      <div class="mt3">
        <%= f.label :current_password, class: "db fw6 lh-copy f6" %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "b pa2 input-reset ba bg-transparent hover-bg-orange hover-white w-100" %>
      </div>
    </fieldset>

    <div class="">
      <%= f.submit "Update", class: "b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib" %>
    </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</main>
